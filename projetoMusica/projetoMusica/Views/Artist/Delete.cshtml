@model projetoMusica.Models.Artist

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background-color: #282424;
        color: white;
    }

    .btn-dark, btn, .btn-dark:active .btn-dark:visited {
        background-color: #ECDEDE;
        color: black;
        border-color: white;
    }

        .btn-dark:hover {
            background-color: #282424;
            color: #ECDEDE;
            border-color: white;
        }

    .btndelete:hover {
        background-color: red;
        color: #ECDEDE;
        border-color: white;
    }

</style>

<h1>@Html.DisplayFor(model => model.artistName)</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.artistName)
        </dd>
        <dt class = "col-sm-2">
            Main Instrument
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.mainInstrument)
        </dd>
        <dt class = "col-sm-2">
            Main Genre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.mainGenre)
        </dd>
        <dt class = "col-sm-2">
            Birth Date 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.born)
        </dd>
        <dt class = "col-sm-2">
            Group
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.group)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-dark btn-sm btndelete" /> 
        <a asp-action="Index" class="btn btn-dark btn-sm">Back to List</a>
    </form>
</div>
