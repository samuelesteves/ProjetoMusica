@model projetoMusica.Models.Music

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background-color: #282424;
        color: white;
    }

    .btn-dark, btn, .btn-dark:active .btn-dark:visited {
        background-color: #ECDEDE;
        color: black;
        border-color: white;
    }

        .btn-dark:hover {
            background-color: #282424;
            color: #ECDEDE;
            border-color: white;
        }

        .btndelete:hover {
        background-color: red;
        color: #ECDEDE;
        border-color: white;
        }

</style>

<h1>@Html.DisplayFor(model => model.musicName)</h1>

<h3>Are you sure you want to delete this music?</h3>
<div>
    <hr />
    <dl class="row">        
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.musicName)*@
            Music
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.musicName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Artist)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Artist)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Explicit)
        </dt>
        <dd class = "col-sm-10">
            @*@Html.DisplayFor(model => model.Explicit)*@
            @if (Model.Explicit == true)
            {
                <span class="badge bg-danger text-white">Explicit</span>
            }
            else
            {
                <span class="badge bg-success text-white">Clear</span>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.releaseDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.releaseDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-dark btn-sm btndelete" /> 
        <a asp-action="Index" class="btn btn-dark btn-sm">Back to List</a>
    </form>
</div>
